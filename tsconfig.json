{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "jsx": "react",
    "module": "commonjs",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "declaration": true,
    "strict": true,
    "declarationDir": "dist",
    "importHelpers": true,
    "noEmitHelpers": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": true,
    "lib": [
      "es6",
      "es2016.array.include",
      "dom"
    ]
  },
  "include": [
    "./index.ts"
  ]
}
